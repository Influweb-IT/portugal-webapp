          "key": "content",
          "containerClassName": "my-3 min-vh-60",
          "columns": [
            {
              "key": "pCol",
              "className": "col-12 col-sm-10 col-md-8",
              "items": [
                {
                  "itemKey": "privacyPolicy",
                  "className": "",
                  "config": {
                    "type": "markdown",
                    "markdownUrl": "/markdowns/privacy.md"
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "path": "/survey-data",
      "pageKey": "survey-data",
      "rows": [
        {
          "key": "content",
          "containerClassName": "my-3 min-vh-60",
          "columns": [
            {
              "key": "pCol",
              "className": "col-12 col-sm-10 col-md-8",
              "items": [
                {
                  "itemKey": "survey-data",
                  "className": "",
                  "config": {
                    "type": "markdown",
